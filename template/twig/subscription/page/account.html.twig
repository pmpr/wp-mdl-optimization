<div class="row">
    {% for card in cards %}
        <div class="col-12 col-md-6 col-lg-4">
            {{ render_backend_card({
                header: card.title,
                content: card.table,
                header_class: 'text-center'
            }) }}
        </div>
    {% endfor %}
    <div class="col-12 col-lg-4">
        {% set card_content %}
            <p class="mb-3">{{ update.guide|raw }}</p>
            {{ update.button|raw }}
        {% endset %}
        {{ render_backend_card({
            header: card.title,
            content: [card_content],
            content_class: 'text-center'
        }) }}
    </div>
</div>
